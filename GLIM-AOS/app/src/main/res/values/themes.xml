<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MyApplication" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.App.LockScreen" parent="android:Theme.Material.Light.NoActionBar">
        <!-- 완전 풀스크린 -->
        <item name="android:windowFullscreen">true</item>
        <!-- 잠금화면 위에 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 기본 배경(월페이퍼) 보여주지 않음 -->
        <item name="android:windowShowWallpaper">false</item>
    </style>

    <!-- 이렇게 해야 됨 -->
    <style name="Theme.MyApplication.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/neural10</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash</item>
        <item name="postSplashScreenTheme">@style/Theme.MyApplication</item>
    </style>

</resources>
